<div class="top-bar" id="responsive-menu">
  {{>navbar/nav}}
</div>

<div class="grid-container">
  <!-- sub header-->
  <div class="grid-x">
    <header class="cell">
      <h3 class="subheader ">View Your Team</h3>
    </header>
  </div>

    <!-- select a team drop down cell-->
  <div class="grid-x">
    <div class="cell">
      <form class="view-form">
        <label>Select a team to view
          <select>
            {{#each team}}
            <option id = "name">{{team.teams}}</option>
            {{/each}}
          </select>
        </label>
        <button class="button" type="submit" data-toggle="example-dropdown-bottom-center">Select</button>
      </form>
    </div>
    <!-- results cell-->
    <div class="cell">
      <div class="view-results"></div>
    </div>

  </div>

</div>


<script>
  $(document).ready(function () {


    var resultsDiv = $(".view-results");
    var resultsCard = $('<div>');
    var cardDivider = $("<div>");
    var cardSection = $("<div>");

    $(".view-form").on("submit", function (event) {
      event.preventDefault();
      console.log("clicked");
      var createdTeamName = $(this).data("team")
      $.ajax("/api/team", {
        type: "GET", 
        user: createdTeamName
      } )
      
    });

  });
</script>




