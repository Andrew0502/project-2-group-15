<div class="grid-container">
  <!-- sub header-->
  <div class="grid-x">
    <header class="cell">
      <h3 class="subheader" style="color: orangered">View Your Team</h3>
    </header>
  </div>

    <!-- select a team drop down cell-->
  <div class="grid-x">
    <div class="cell">
      <form class="view-form">
        {{!-- <label>Select a team to view --}}
          <select>
            {{#each team}}
            <option id = "name">{{team.teams}}</option>
            {{/each}}
          </select>
        {{!-- </label> --}}
        <button class=" alert button" type="submit" data-toggle="example-dropdown-bottom-center" >Select</button>
      </form>
    </div>
    <!-- results cell-->
    <div class="cell">
      <div class="view-results">
      </div>
    </div>
  </div>
</div>


