<div> 
  {{>navbar/nav}}
</div>

<h3> Build Your Team</h3>

        <form id="searchTeam" class="button-size"></form>
        <input type="text" name="id" placeholder="search">
        </form>
        <div class="grid-container">
            <div class="grid-x grid-margin-x small-up-2 medium-up-3">
                <div id="select-team" class="cell">
                    <label> Results 
                        <select>
                        {{#each team}}
                            <option >{{team.teams}}</option>
                          {{/each}} 
                        </select>
                      </label> 
                </div>
                <div class="cell">
                    <div class="card-section">
                        <!-- Top Center -->
                        <div>
                        <button class="button" type="button" data-toggle="example-dropdown-top-center">Add</button>
                        </div>
                        <!-- Bottom Center -->
                        <div>
                        <button class="button" type="button" data-toggle="example-dropdown-bottom-center">Delete</button>
                        </div>
                    </div>
                </div>
                <ul class = "selected-team">
                  <label> Your Teams 
                    <select>
                    {{#each team}}
                        <option >{{team.teams}}</option>
                      {{/each}} 
                    </select>
                  </label> 
                  <input for='selected-team' type="submit" value="Save">
                </ul>
            </div> 
        </div>


